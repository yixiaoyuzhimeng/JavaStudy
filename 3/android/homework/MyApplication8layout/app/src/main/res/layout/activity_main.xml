<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/level1"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:background="@drawable/level3"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">
        <ImageView
            android:id="@+id/li_l_1"
            android:src="@drawable/l1_l_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="8dp"
            />
        <ImageView
            android:id="@+id/li_r_1"
            android:src="@drawable/l1_r_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            />
        <ImageView
            android:id="@+id/li_l_2"
            android:src="@drawable/l1_l_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/li_l_1"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="32dp"
            />
        <ImageView
            android:id="@+id/li_r_2"
            android:src="@drawable/l1_r_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/li_r_1"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="32dp"
            />
        <ImageView
            android:id="@+id/li_l_3"
            android:src="@drawable/l1_l_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="70dp"
            />
        <ImageView
            android:id="@+id/li_r_3"
            android:src="@drawable/l1_r_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dp"
            android:layout_marginRight="72dp"
            />
        <ImageView
            android:id="@+id/l1_center"
            android:src="@drawable/l1_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_centerHorizontal="true"
            />
        <RelativeLayout
            android:id="@+id/level2"
            android:background="@drawable/level2"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">
            <ImageView
                android:id="@+id/l2_l_1"
                android:src="@drawable/l2_l_1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_alignParentBottom="true"/>
            <ImageView
                android:id="@+id/l2_r_1"
                android:src="@drawable/l2_r_1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="8dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"/>
            <ImageView
                android:id="@+id/l2_center"
                android:src="@drawable/l2_center"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"/>
            <RelativeLayout
                android:id="@+id/level3"
                android:src="@drawable/level1"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true">
                <ImageView
                    android:id="@+id/l3_center"
                    android:src="@drawable/l3_center"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>